{
  "name": "zigbee2mqtt-adapter",
  "display_name": "zigbee2mqtt adapter",
  "version": "0.3.0",
  "description": "Brings all your zigbee devices to the gateway through mqtt bridge",
  "main": "index.js",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "virtual",
    "zigbee",
    "mqtt"
  ],
  "homepage": "https://github.com/flatsiedatsie/zigbee2mqtt-adapter",
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/flatsiedatsie/zigbee2mqtt-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/flatsiedatsie/zigbee2mqtt-adapter/issues"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.2.1"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "devices.js",
    "index.js",
    "simulator.js",
    "zigbee2mqtt-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "mqtt": "mqtt://localhost",
      "prefix": "zigbee2mqtt"
    },
    "schema": {
      "type": "object",
      "properties": {
        "mqtt": {
          "type": "string",
          "description": "Mosquitto or other mqtt server host/port to connect to"
        },
        "prefix": {
          "type": "string",
          "description": "Mqtt topic prefix for zigbee2mqtt"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint ."
  },
  "dependencies": {
    "mqtt": "^3.0.0"
  }
}
